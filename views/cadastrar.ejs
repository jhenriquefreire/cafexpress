            <input type="password" name="senhaconfrima" placeholder="Confimar senha"><br>
            <button>Cadastro</button>
            <div class="contebox">
            <hr style="width: 90%; height:1px; border-width:0;color:#5E2423;background-color:#5E2423;">
                 <a href="">Login</a>
            </div>
        </form>
    </main>
    <%- include("./partials/footer") %>

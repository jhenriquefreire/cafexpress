<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <title>Cafexpress - Produtos</title>
</head>
<body>
    <%- include("./partials/header") %>
    <main>
        <section class="produtos-lista">
            <div class="container">
                <h1>Produtos</h1>
                
                <% produtos.forEach(function(produto) { %>
                    <article>
                        <div class="thumb">
                            <img src="/uploads/<%= produto.imagem %>" alt="">
                        </div>
                        <div class="info">
                            <h2><%= produto.nome %></h2>
                            <p><%= produto.descricao %></p>
                            <h3>R$ <%= produto.preco %></h3>
                            <a href="/produtos/<%= produto.id %>" class="btn btn-primary">Detalhes</a>
                        </div>
                    </article>
                <% }) %>
                    

            </div>
        </section>
    </main>
    </main>
    <%- include("./partials/footer") %>
</body>
</html>
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ADMIN CAFEXPRESS</title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <%- include("../partials/header") %>
    <main>
        <section class="contato">
            <div class="container">
                <h1>Carrinho de Produtos</h1>
                <div class="align-row" style="width: 100%;">
                  <table>
                    <tr>
                      <th>ID</th>
                      <th>Nome</th>
                      <th>Descrição</th>
                      <th>Preço</th>
                      <th>Ações</th>
                    </tr>
                    <% carrinho.forEach(produto => { %>
                      <tr>
                        <td><%= produto.id %></td>
                        <td><%= produto.nome %></td>
                        <td><%= produto.descricao %></td>
                        <td>R$ <%= produto.preco %></td>
                        <td>
                          <a href="/admin/produtos/<%= produto.id %>/carrinho/remover">Remover</a>
                        </td>
                      </tr>
                    <% }) %>
                  </table>
                </div>
                <a href="/api/busca-cep">Buscar CEP</a>
            </div>
        </section>
    </main>
    <%- include("../partials/footer") %>
</body>

</html>